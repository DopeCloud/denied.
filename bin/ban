#!/bin/bash
altibox(){
          echo "|========================================|"
          echo "|============ ALTIBOX.TXT ===============|"
          filename='altibox.txt'
          exec 4<$filename
          while read -u4 p ; do
              ip route add blackhole $p
              echo $p
          done
          echo "|========================================|"
          echo "|========================================|"
          echo "|////////////////////////////////////////|"
}

